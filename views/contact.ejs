<div class="container mt-3">
    <div class="row">
        <div class="col-md-8"></div>
        <h2>Daftar Contact</h2>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Nama</th>
                <th scope="col">No Handphone</th>
                <th scope="col">Aksi</th>
              </tr>
            </thead>
            <tbody>

              <!--jika data kosongs -->
              <% if (contacts.length === 0 ) { %>
                <tr>
                  <td col-span="4">
                  <div class="alert alert-danger fw-bold" role="alert">Daftar kosong
                  </div>
                  </td>
                </tr>
                <% } %>

              <!--looping array object yg di ambil dari contact-->
              <% contacts.forEach((contact , i) => { i++ %>
                <tr>
                  <th scope="row"><%= i++ %> </th>
                  <!--key yg di ambil hanya nama dan noHp-->
                  <td><%= contact.nama %> </td>
                  <td><%= contact.nohp %> </td>
                
                  <td>
                      <a href="/contact/<%= contact.nama %> " class="btn btn-success badge rounded-pill"><i class="bi bi-info-circle"></i> detail</a>
                  </td>
                </tr>
              <% }) %>
          
            </tbody>
          </table>
    </div>
</div>